{{#each beverages as |beverage|}}

    {{#if beverage}}
        <tr data-id="{{beverage.id}}">
          <td align="left">{{beverage.rating}}</td>
          <td align="left">{{beverage.name}}</td>
          <td align="left">{{beverage.description}}</td>
          <td align="left">{{beverage.recipe}}</td>
          <td align="left">{{beverage.instructions}}</td>
        </tr>
{{else}}
    There are no beverages on record.
{{/if}}

{{/each}}
